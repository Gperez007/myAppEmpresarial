<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.activitys.LoginRegistroLoginActivity">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!-- Capa oscura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia Sesión"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp" />

            <!-- Imagen principal -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/login"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center" />

            <!-- Teléfono -->
            <EditText
                android:id="@+id/textTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/télefono"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:textColorHint="#B3FFFFFF"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_phone"
                android:drawablePadding="12dp"
                android:background="@drawable/edittext_background" />

            <!-- Contraseña -->
            <EditText
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Ingrese su contraseña"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#B3FFFFFF"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_lock"
                android:drawablePadding="12dp"
                android:background="@drawable/edittext_background" />

            <!-- Loading -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true">

                <ProgressBar
                    android:id="@+id/ProgressBarLogin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- Botón -->
            <Button
                android:id="@+id/buttonRegistrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Iniciar Sesión"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/btn_glass_selector" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
