<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Empresa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:gravity="center"/>

    <!-- Campo de Número de NIT -->
    <EditText
        android:id="@+id/editNit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de NIT"
        android:inputType="number"
        android:backgroundTint="@color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Campo de Razón Social -->
    <EditText
        android:id="@+id/editRazonSocial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Razón Social"
        android:inputType="textCapWords"
        android:backgroundTint="@color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editNit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Campo de Correo Electrónico -->
    <EditText
        android:id="@+id/editCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editRazonSocial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Botón de Registrar Empresa -->
    <Button
        android:id="@+id/btnRegistrarEmpresa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Empresa"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
