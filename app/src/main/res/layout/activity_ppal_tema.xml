<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".activitys.activitys.PpalTemaActivity">

    <!-- Video de fondo -->
    <VideoView
        android:id="@+id/bgVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <!-- Encabezado con icono de logout -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSingOutFoundPpal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_icon"
        android:padding="8dp"
        android:src="@drawable/ic_logout"
        android:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bienvenida -->
    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido ðŸš€"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuscarTiendasCercanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Tiendas Cercanas"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_store"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/acent"
            app:cornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrAlChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir al Chat"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_chat"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnclientePromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promociones"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_local_offer"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedidos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_cart"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/red_500"
            app:cornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_payment"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/blue_500"
            app:cornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProdLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n de Productos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_location"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/green_500"
            app:cornerRadius="20dp"
            android:elevation="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
