<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    
    <com.makeramen.roundedimageview.RoundedImageView

        android:id="@+id/imagePerfil"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:background="@drawable/login"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"/>

    <View
        android:id="@+id/ViewSoporte"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imagePerfil"
        app:layout_constraintStart_toEndOf="@id/imagePerfil"
        app:layout_constraintTop_toTopOf="@id/imagePerfil"/>


    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/green"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/ViewSoporte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagePerfil">

    </TextView>

    <TextView
        android:id="@+id/textRecentMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/imagePerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewSoporte">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>