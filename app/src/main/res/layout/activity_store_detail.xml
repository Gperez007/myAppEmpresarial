<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtCarritoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrito: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Información de la tienda -->
        <TextView
            android:id="@+id/storeName"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/storeAddress"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/storePhone"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />


        <!-- Botones de acción -->
        <Button
            android:id="@+id/btnCall"
            android:text="Llamar a la tienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/btnPromociones"
            android:text="Promociones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/btnOrder"
            android:text="Pedir a domicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnMap"
            android:text="Ver en el mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Funciones adicionales -->
        <Button
            android:id="@+id/btnFavorite"
            android:text="Guardar como favorita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnComments"
            android:text="Ver comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnShare"
            android:text="Compartir tienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Políticas y atención -->
        <LinearLayout
            android:id="@+id/politicasLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#EFEFEF"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/politicasTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Políticas y Reclamos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />


            <Button
                android:id="@+id/btnChatCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat de atención al cliente"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</ScrollView>
