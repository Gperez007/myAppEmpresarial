<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo semi-transparente -->
    <solid android:color="#1AFFFFFF" />

    <!-- Borde gris más opaco -->
    <stroke
        android:width="2dp"
        android:color="#666666" /> <!-- Aquí se pone más fuerte -->

    <!-- Bordes redondeados -->
    <corners android:radius="8dp" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
